<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="140dp">

        <TextView
            android:id="@id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ic_star"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/ic_people"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/ic_star"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_people" />

            <ImageView
                android:id="@+id/ic_calendar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/ic_people"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_calendar" />

            <ImageView
                android:id="@+id/ic_lang"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@id/ic_calendar"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_language" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/ic_star"
                android:text="0/10" />

            <TextView
                android:id="@+id/tv_votes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ic_people"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/ic_star"
                android:text="0 votes" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ic_calendar"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/ic_star"
                android:text="1 Jan 1970" />

            <TextView
                android:id="@+id/tv_lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ic_lang"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/ic_star"
                android:text="En" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_true" />


</LinearLayout>